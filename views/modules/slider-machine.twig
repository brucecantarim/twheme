{# There's more functionality to it, but the client actually asked for just one static image #}

{% block slidermachine %}

<div tabindex="-1" class="modal fade" id="lightbox" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" type="button" data-dismiss="modal">×</button>
        <h3 class="modal-title">{{ post.title }}</h3>
      </div>
      <div class="modal-body text-center">
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">{{__('Fechar', 'twheme')}}</button>
      </div>
    </div>
  </div>
</div>      

<!-- SLIDER -->
<div class="product-slider">
    <div class="row-spacer"></div>
    <div class="slide active-slide" data-toggle="off" style="background: url({{ post.thumbnail.src }}) no-repeat center center; background-size: cover;">
    </div>
    {#{% for image in post.gallery if gallery %}
    <div class="slide" data-toggle="off" style="background: url({{ image.thumbnail.src }}); background-size: cover;">
    </div>
    {% endfor %}#}
    <button onclick="document.getElementById('#contact-jump').scrollIntoView({block: 'start', behavior: 'smooth'})" id="btn-fold" class="btn btn-yellow text-center"></i>
        <h4>{{__('Solicite o seu orçamento', 'twheme')|e }}</h4>
    </button>
</div>

