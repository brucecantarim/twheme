{# contactform.twig #}

{% block contactform %}
<div class="container-flex section-form">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <h1 class="section-title wow fadeInUp">{{__('ENTRE EM CONTATO', 'twheme')|e }}</h1>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <form action="{{ site.url }}" method="post">
                <input class="contact-field center-block wow fadeIn" placeholder="{{__('Nome', 'twheme')|e }}" type="text" name="message_name" pattern="[a-zA-Z]+" required data-wow-delay="0.6s">
                <input class="contact-field center-block wow fadeIn" placeholder="{{__('Email', 'twheme')|e }}" type="email" name="message_email" required data-wow-delay="0.6s">
                <input class="contact-field center-block wow fadeIn" placeholder="{{__('Telefone', 'twheme')|e }}" type="tel" name="message_phone" required data-wow-delay="0.6s">
                <textarea placeholder="{{__('Mensagem', 'twheme')|e }}" name="message_text" required class="contact-field center-block wow fadeIn" data-wow-delay="0.6s"></textarea>
                <input type="submit" name="message_send" class="btn btn-primary center-block wow bounceIn" id="sendbutton" data-wow-delay="0.2s" value="{{__('ENVIAR', 'twheme')|e }}">
            </form>
        </div>
    </div>
</div>
{% endblock contactform %}