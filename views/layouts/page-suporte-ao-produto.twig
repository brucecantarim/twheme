{# page-suporte-ao-produto.twig #}

{% extends "single.twig" %}

{% block fold %}
<div class="row-spacer"></div>
<div class="body-content">
    <div class="container">
       <div class="row">
           <div class="col-xs-12 col-sm-5 col-md-7">
               <h1>{{post.title}}</h1>
           </div>
           <div class="col-xs-12 col-sm-7 col-md-5 text-right pull-right">
                    <a href="phone:19997066772" class="color-black">
                    <i class="fa fa-phone"></i>
                    (19) 9 9706-6772</a>
                    <a href="mailto:brasil@vermeer.com" class="color-black">
                    <i class="fa fa-envelope"></i>
                    suporte@vermeer.com</a>
            </div>
       </div>
       <hr/>
        
        <div class="row">
            <div class="col-sm-4 col-md-4 bg-color-grey">
                <br/>
                <ul>
                    {% if post.children %}
                    {% for child in post.children %}
                    <li><a href='{{child.link}}' class="link-black">{{child.title|upper}}</a></li>
                    {% endfor %}
                    {% else %}
                    {% for child in post.parent.children %}
                    <li><a href='{{child.link}}' class="link-black">{{child.title|upper}}</a></li>
                    {% endfor %}
                    {% endif %}
                <br/>
            </div>
            
            <div class="col-sm-8 col-md-8 no-padding">
                <div class="full-width">
                    {% if post.thumbnail %}
                    <img class="img-responsive" src="{{post.thumbnail.src}}"/>
                    {% else %}
                    <img class="img-responsive" src="http://placehold.it/600x300?text={{__('ADICIONE UMA IMAGEM DESTACADA NESSA POSTAGEM', 'twheme')}}"/>
                    {% endif %}
                </div>
                <br/>
                {{ post.content }}
            </div>
        </div><!-- /.row -->
</div><!-- /.container -->
</div><!-- /.body-content -->
{% endblock fold %}

{% block content %}
<!-- MEDIA BLOCK -->
<div class="body-content">
    <div class="container">
    {% block media %}
        {% if post.children %}
        {% else %}
        <div class="row-spacer"></div><!-- /.row spacer -->
            {% include 'support-media.twig' %}
        {% endif %}
    {% endblock media %}
    </div><!-- /.container -->
</div><!-- /.body-content -->
{% endblock content %}