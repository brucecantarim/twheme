{% extends 'single-noticia.twig' %}

{% block content %}
<div tabindex="-1" class="modal fade" id="lightbox" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" type="button" data-dismiss="modal">×</button>
        <h3 class="modal-title">{{ post.title }}</h3>
      </div>
      <div class="modal-body text-center">
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">{{__('Fechar', 'twheme')}}</button>
      </div>
    </div>
  </div>
</div>    

<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>{{post.title}}</h3>
                <hr/>
            </div>
            <div class="col-md-12 text-right">
                <h4>De {{post.startdate|date("d/m/Y")}} à {{post.enddate|date("d/m/Y")}}</h4>
            </div>
            <div class="col-md-12">
                {{post.content}}
            </div>
            <div class="col-md-12 text-left">
                <h4>{{__('Local:','twheme')|e}} {{post.address}}</h4>
            </div>
            <div class="col-md-12 text-left">
                <h4>{{__('Mais Informações','twheme')|e}}:</h4>
                <a href="{{evento.externallink}}"><button class="btn btn-yellow" value="{{evento.externallink}}">{{post.externallink}}</button></a>
            </div>
         </div><!-- /.row -->
         {% include 'support-media.twig' %}
    </div><!-- /.container -->
</div><!-- /.body-content -->
{% endblock content %}