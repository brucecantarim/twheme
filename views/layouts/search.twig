{% extends 'base.twig' %}

{% block content %}
    {% include 'photo-stripe.twig' %}
    <div class="container">
        <div class ="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <br/><br/>
                <h1 class="search-title wow fadeInUp">{{ title }}</h1>
                <hr/>
                <br/><br/>
            </div>
        {% if posts %}
        {% for post in posts %}
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 wow slideInRight">
                    <h1>{{ post.title }}</h1>
				    <a href="{{ post.link }}">
				    {% if post.mainimg %}
                    {% set id = post.mainimg %}
                    <img class="img-thumbnail" src="{{ Image(id).src }}" srcset="{{ Image(id).src }}"/>
				    {% elseif post.thumbnail %}
				    <img class="img-thumbnail" src="{{ post.thumbnail.src }}" srcset="{{ post.thumbnail.src }}">
                    {% else %}
                    <img class="img-thumbnail" src="http://placehold.it/300?text={{__('IMAGEM', 'twheme')|e }}">
                    {% endif %}
                </a>
            </div><!--/. col -->
        {% endfor %}
        {% else %}
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 wow slideInRight">
                    <h1>{{__('Nenhum resultado', 'twheme')|e}}</h1>
                    <h3>{{__('Verifique se digitou o termo corretamente, ou tente novamente mais tarde', 'twheme')}}</h3>
                 </div><!--/. col -->
        {% endif %}
        </div>
        <br/><br/><br/>
    </div>
{% endblock %}