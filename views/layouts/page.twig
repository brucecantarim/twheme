{# page.twig #}
{% extends 'base.twig' %}

{# just a basic implementation of the post content display, for pages #}
{% block content %}
	<div class="container">
		<div class="row">
		    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			        <section class="article-content">
				     <h1 class="article-h1">{{post.title}}</h1>
				        <div class="article-body">
					        {{post.content}}
				        </div>
			        </section>
		        </article>
            </div><!-- /col 1 -->
        </div><!-- /row -->
	</div><!-- /container -->
{% endblock content %}