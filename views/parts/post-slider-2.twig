{# post-slider-2.twig #}

{% block postslider2 %}

<!-- POST SLIDER --> 

        {% if post.type == 'maquina' %}
        
        <div class="product-slider">
            <div class="slide active-slide" data-toggle="off" style="background: url({{ post.thumbnail.src }}); background-size: cover;">
            </div>
            {% for image in post.gallery if gallery %}
                <div class="slide" data-toggle="off" style="background: url({{ image.thumbnail.src }}); background-size: cover;">
                </div>
            {% endfor %}
        </div>
        
        {# Should we display the slider control? #}
            {% if post.gallery %}
            <div class="product-slider-control">

                    <div class="arrow-prev text-center">
                        <i class="glyphicon glyphicon-chevron-left arrow-icon"></i>
                    </div>

                    <div class="arrow-next text-center">
                        <i class="glyphicon glyphicon-chevron-right arrow-icon"></i>
                    </div>
                    
            </div>


                <div class="product-slider-nav">
                    <ul class="slider-dots">
                        <li class="dot active-dot">&bull;</li>
                        {% for image in post.gallery %}
                        <li class="dot">&bull;</li>
                        <li class="dot">&bull;</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            
        {% elseif post.type == 'page' %}
           
        <div class="slider">
            <div class="slide active-slide" data-toggle="off" style="background: url({{ post.thumbnail.src }}); background-size: cover;"></div>
        </div>
           
        {% elseif post.type == 'seminovo' %}
        
         
           
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img class="img-responsive" src="{{post.thumbnail.src}}"/>
                    <div class="row">
                        {% for id in post.gallery if post.gallery %}
                        <div class="col-md-3">
                            <a href="{{Image(id).src}}">
                                <img class="img-thumbnail" src="{{Image(id).src}}"/>
                            </a>
                        </div>
                        {% endfor %}
                    </div><!-- /.row -->
                </div><!-- /.col-md-6 -->
                <div class="col-md-6 bg-color-grey no-padding">
                    <div class="col-md-12 bg-color-grey">
                        <h2>{{post.title}}</h2>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-grey">
                        <p>{{post.content|slice(0, 350)}}</p>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-dark-grey">
                        <h3><small class="color-black">{{__('Número de Série:', 'twheme')}} </small>{{post.serialnumber}}</h3>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-grey">
                        <h3><small class="color-black">{{__('Ano:', 'twheme')}} </small>{{post.year}}</h3>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-dark-grey">
                        <h3><small class="color-black">{{__('Horímetro:', 'twheme')}} </small>{{post.hours}} {{__('horas', 'twheme')|lower}}</h3>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-grey">
                        <h3><small class="color-black">{{__('Local:', 'twheme')}} </small>{{post.location}}</h3>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-dark-grey">
                        <h3><small class="color-black">{{__('Composição:', 'twheme')}} </small></h3>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-dark-grey">
                        <p>{{post.composition|slice(0, 350)}}</p>
                    </div><!-- /.col-md-12 -->
                    <div class="col-md-12 bg-color-grey">
                        <h1 class="text-right">R$ {{post.price}}</h1>
                    </div><!-- /.col-md-12 -->
                </div><!-- /.col-md-6 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
