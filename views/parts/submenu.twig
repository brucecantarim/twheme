{# submenu.twig #}
       
{% for item in menu if menu %} 
    <div id="menu-item-{{item.ID}}" class="submenu blur">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    {% for subitem in item.get_children %}
                    <ul class='submenulist text-center'>
                        {% if subitem.current %}
                            <li class='submenuitem active'><h4><b>{{subitem.title}}</b></h4></li>
                            {% include "menuitem.twig" with { 'menu': subitem.get_children, 'menuitemclass': 'submenuitem', 'notarget': true } only %}
                        {% else %}
                            <li class='submenuitem active'><h4><b>{{subitem.title}}</b></h4></li>
                            {% include "menuitem.twig" with { 'menu': subitem.get_children, 'menuitemclass': 'submenuitem', 'notarget': true } only %}
                        {% endif %}
                    </ul><!-- /.submenulist -->
                    {% endfor %}
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /#submenu -->
{% endfor %}