{# footer-content.twig #} 

{% block footercontent %}

<!-- FOOTER CONTENT -->

<div class="footer-content">
    <div class="container-flex">
        <div class="row">
            {% for footersection in footermenu.get_items %}
            <div class="col-xs-3 col-sm-3 col-md-2">
                <h5>{{footersection.title|upper}}</h5>
                {% for footerlink in footersection.get_children %}
                <a href="{{footerlink.link}}">{{footerlink.title|capitalize}}</a>
                {% endfor %}
            </div>
            {% endfor %}
            <div class="col-xs-3 col-sm-3 col-md-2">
                <h5>Eventos</h5>
                <a href="{{site.link}}/eventos">Próximos Eventos:</a>
                <span>
                {% for evento in eventos|slice(0,1) %}
                {% if evento %}
                    <strong>{{evento.title}}</strong><br/>
                    De {{evento.startdate|date("m/d/Y")}} à {{evento.enddate|date("m/d/Y")}}<br/>
                    {{__('Local:','twheme')|e}} {{evento.address}}
                        <a class="pull-right" href="{{ evento.link }}">
                            <div class="btn btn-square text-center">
                                <p>+</p>
                            </div>
                        </a>
                {% else %}
                    <strong>Nenhum evento agendado neste momento.</strong><br/>
                {% endif %}
                {% endfor %}
                </span>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 pull-right">
                <div class="col-xs-12 col-sm-9 col-md-6">
                </div>
                <div class="col-xs-12 col-sm-3 col-md-6">
                    <div class="col-xs-3 col-md-3">
                        <a href="https://www.facebook.com/VermeerBrasil" target="_blank">
                            <div class="footer-circle center-block text-center">
                                <i class="fa fa-facebook"></i>
                            </div>
                        </a>
                    </div>
                    <div class="col-xs-3 col-md-3">
                        <a href="http://www.instagram.com/VermeerBrasil" target="_blank">
                            <div class="footer-circle center-block text-center">
                                <i class="fa fa-instagram"></i>
                            </div>
                        </a>
                    </div>
                    <div class="col-xs-3 col-md-3">
                        <a href="https://www.linkedin.com/company/vermeer-latin-america" target="_blank">
                            <div class="footer-circle center-block text-center">
                                <i class="fa fa-linkedin"></i>
                            </div>
                        </a>
                    </div>
                    <div class="col-xs-3 col-md-3">
                        <a href="http://www.youtube.com/VermeerLatinAmerica" target="_blank">
                            <div class="footer-circle center-block text-center">
                                <i class="fa fa-youtube"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr/>
            </div>
            <div class="col-xs-6 col-md-6 text-left">
                <p>R. Francisco Juliato, 79 - Vale Verde, Valinhos - SP, 13279-000</p>
            </div>
            <div class="col-xs-6 col-md-6 text-right">
                <p>© 2016 Vermeer Brasil. Todos os direitos reservados.</p>
            </div>
        </div>
    </div>
</div>

{% endblock footercontent %}