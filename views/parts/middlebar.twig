{# middlebar.twig #}

{% block middlebar %}

        <div class="middlebar">
            <div class="container-flex">
                <div class="row">
                    <div class="col-md-12 text-center">
                       <br/>
                        <h3 class="text-left"><small>{{parent.name}}</small></h3>
                        <h1 class="text-left"><small>{{category.name}}</small> <strong>{{ post.title }}</strong></h1><br/>
                        <hr/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-justify">
                        <p>{{ post.content }}</p>
                    </div>
                </div>
            </div>
        </div>

{% endblock middlebar %}